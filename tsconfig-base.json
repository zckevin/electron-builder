{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "inlineSources": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "newLine": "lf",

    "noEmitOnError": true,

    "plugins": [
      {
        "transform": "typescript-transform-aliases",
        "after": true,
        "afterDeclarations": true,
        "aliases": {
          "^app-builder-lib(.*)$": "@zckevin/electron-builder/packages/app-builder-lib$1",
          // "^builder-util(.*)$": "@zckevin/electron-builder/packages/builder-util$1",
          // "^builder-util-runtime(.*)$": "@zckevin/electron-builder/packages/builder-util-runtime$1",
          // "^dmg-builder(.*)$": "@zckevin/electron-builder/packages/dmg-builder$1",
          // "^electron-builder(.*)$": "@zckevin/electron-builder/packages/electron-builder$1",
          // "^electron-publish(.*)$": "@zckevin/electron-builder/packages/electron-publish$1",
          // "^electron-builder-squirrel-windows(.*)$": "@zckevin/electron-builder/packages/electron-builder-squirrel-windows$1",
          // "^electron-forge-maker-appimage(.*)$": "@zckevin/electron-builder/packages/electron-forge-maker-appimage$1",
          // "^electron-forge-maker-nsis(.*)$": "@zckevin/electron-builder/packages/electron-forge-maker-nsis$1",
          // "^electron-forge-maker-nsis-web(.*)$": "@zckevin/electron-builder/packages/electron-forge-maker-nsis-web$1",
          // "^electron-forge-maker-snap(.*)$": "@zckevin/electron-builder/packages/electron-forge-maker-snap$1",
          // "^electron-updater(.*)$": "@zckevin/electron-builder/packages/electron-updater$1",
        }
      }
    ],
    // "paths": {
    //   "@zckevin/electron-builder/packages/*": [
    //     "./packages/*"
    //   ],
    // },
  }
}